
<div class="row">
    {{# each products}}
    <div class="col-sm-6 col-md-4 col-lg-4 margin-top-20">
    <div class="card" style="width: 21rem;">
        <img height="150px" width="100%" src="{{this.imgPath}}" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <div class="clearfix">
                <div class="float-left">{{this.price}}$</div>
                <button class="float-right btn btn-success"><a href="/add-to-cart/{{this.id}}">Add to cart</a></button>
            </div>
        </div>
    </div>
</div>
{{/each}}
</div>


